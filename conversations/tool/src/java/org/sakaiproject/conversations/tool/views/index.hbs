<span class="blink">New Conversation Tool!!</span>

<p>
  <a href="{{baseURL}}new-topic" class="button">Create Topic</a>
</p>

<table class="table table-bordered table-hover table-condensed">
    <thead>
        <tr>
            <th class="col-sm-3">Topic Title</th>
            <th class="col-sm-6">Topic Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each topics}}
            <tr>
              <td>{{title}}</td>
              <td>{{type}}</td>
              <td><a href="{{baseURL}}topic?uuid={{uuid}}">View</a></td>
            </tr>
        {{/each}}
    </tbody>
</table>