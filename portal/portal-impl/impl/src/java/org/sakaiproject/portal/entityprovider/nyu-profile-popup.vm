<script type="text/javascript" src="/profile2-tool/javascript/profile2-eb.js"></script>
<div class="profile-popup nyu">
    <div class="profile-popup-top">
        <div class="profile-popup-picture">
            <span style="background-image:url(${pictureUrl})"></span>
        </div>
        <div class="profile-popup-details">
            <div class="profile-popup-display-name">${displayName}</div>
            <div class="profile-popup-display-eid">${eid}</div>
            <div class="profile-popup-display-section">${sections}</div>
        </div>
    </div>
    <div class="profile-popup-bottom">
        <div class="profile-popup-actions">
            #if (!${connected})
                <ul>
                    <!-- Profile Link -->
                    <li>
                        <a href="${profileUrl}" class="profile-link" data-useruuid="${connectionUserId}" data-siteid="${siteId}">
                            <span class="fa fa-user"></span>
                        </a>
                    </li>
                    <!-- Message -->
                    <li></li>
                    <!-- Chat -->
                    <li></li>
                </ul>
            #else                                    
                <div id="profile-popup-unconnected-block-${connectionUserId}">
                    <button class="profile-connection-button" onclick="return profile.requestFriend('${currentUserId}','${connectionUserId}');">
                        <span class="fa fa-plus"><span>
                        <span class="profile-popup-action-label">${addConnectionLabel}</span>
                    </button>
                </div>
            #end
        </div>
    </div>
</div>
