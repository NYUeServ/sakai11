<!doctype html>
<html>
    <head>
        <meta charset="utf-8" />
        <link rel="stylesheet" type="text/css" href="{{{skinRepo}}}/tool_base.css" />
        <link rel="stylesheet" type="text/css" href="/drive-tool/stylesheets/drive.css" />

        {{{randomSakaiHeadStuff}}}
    </head>
    <body>

        <div class="portletBody drive-body">
            {{#if flash}}
                {{#each flash}}
                    <ul class="alert alert-{{@key}}">
                        {{#each this}}
                            <li>{{{t null this}}}</li>
                        {{/each}}
                    </ul>
                {{/each}}
            {{/if}}

            {{#if errors}}
                <ul class="alert alert-danger">
                    {{#each errors}}
                        <li> {{this.field}} - {{{t null this.errorCode}}}</li>
                    {{/each}}
                </ul>
            {{/if}}

            {{{subpage this subpage}}}
        </div>
    </body>
</html>
